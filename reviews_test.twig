{% if reviews %}
    {% for review in reviews %}
        <table class="table table-striped table-bordered">
            <tr>
                <td style="width: 50%;"><strong>name: {{ review.author }}</strong></td>
                <td style="width: 50%;"><strong>phone: {{ review.phone }}</strong></td>
            </tr>
            <tr>
                <td colspan="2"><p>{{ review.text }}</p></td>
            </tr>
        </table>
    {% endfor %}
{% else %}
    <p>{{ text_no_reviews }}</p>
{% endif %}